  <div class="ibox-content m-b-sm border-bottom">
    <div class="p-xs">
      <div class="pull-left m-r-md">
        <i class="fa fa-users fa-5x text-navy mid-icon"></i>
      </div>
      <h2>Groups</h2>
      <span>Create groups and manage your groups. You can send tasks to specific groups. You can also edit the number of users in a group</span>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Group</h5>
          <div class="ibox-tools">
          <a href="#" data-toggle="modal" id="createModel" data-target="#myModal5" class="btn btn-primary btn-xs">Create New Group</a> 

          </div>
        </div>
        <div class="ibox-content">

          <table class="table">
            <thead>
              <tr>
               <th>id</th>
               <th>Title</th>
               <th>Description</th>
               <th>Members</th>
               <th>Tasks attached with the group</th>
               <th>Actions</th>       
             </tr>
           </thead>
           <tbody>
            <% @groups.each do |group| %>
            <tr>
              <td><%= group.id %></td>
              <td><%= group.title %></td>
              <td><%= group.description %></td>
              <td><%= "Group memberships count" %></td>
              <td>Tasks attached with the group</td>         
              <td class="actions">
                <%= link_to 'Manage', client_group_manage_path(group), class: 'btn btn-primary btn-sm ' %> 
                <%= link_to 'Delete', client_group_path(group), method: :delete, data:{confirm: 'Are you sure?'}, class: 'btn btn-warning btn-sm ' %> 
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

  <!-- Modal form -->

  <div class="modal inmodal fade" id="myModal5" tabindex="-1" role="dialog" aria-hidden="true" style="display: none;">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title">Create Group</h4>
          <small class="font-bold">Please fill the required fields.</small>
        </div>
        <div class="modal-body">

          <%= form_for(@group, url: client_groups_path(@group)) do |group| %>

          <div class="form-group"><label class="col-lg-2 control-label">Title *</label>

            <div class="col-lg-10">
              <%= group.text_field :title, class: 'form-control', placeholder: 'Title', required: true %>
            </div>
          </div>&nbsp;
          <div class="form-group">
            <label class="col-lg-2 control-label">Description </label>

            <div class="col-lg-10">
              <%= text_area(:group, :description, cols: 40, rows: 5, placeholder: 'Description', class: 'form-control') %>
            </div>
          </div>&nbsp;
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <!-- <button class="btn btn-sm btn-primary" type="submit">Send</button> -->
              <%= group.submit 'Send', class: 'btn btn-sm btn-primary'  %>
            </div>
          </div>&nbsp;
          <!-- </form> -->
          <% end %>


        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>

        </div>
      </div>
    </div>
  </div>